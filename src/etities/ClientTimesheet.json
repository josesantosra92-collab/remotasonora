{
  "name": "ClientTimesheet",
  "type": "object",
  "properties": {
    "client_user_id": {
      "type": "string",
      "description": "Reference to ClientUser"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Work date"
    },
    "hours": {
      "type": "number",
      "description": "Hours worked"
    },
    "description": {
      "type": "string",
      "description": "Work description"
    },
    "rate_per_hour": {
      "type": "number",
      "description": "Hourly rate in USD"
    },
    "total_amount": {
      "type": "number",
      "description": "Total amount for this entry"
    },
    "visible_to_client": {
      "type": "boolean",
      "default": false,
      "description": "Whether client can see this"
    }
  },
  "required": [
    "client_user_id",
    "date",
    "hours",
    "description"
  ]
}
