{
  "name": "ClientUser",
  "type": "object",
  "properties": {
    "first_name": {
      "type": "string",
      "description": "Client's first name"
    },
    "last_name": {
      "type": "string",
      "description": "Client's last name"
    },
    "company": {
      "type": "string",
      "description": "Company name"
    },
    "address": {
      "type": "string",
      "description": "Physical address"
    },
    "zip_code": {
      "type": "string",
      "description": "ZIP code"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Client email"
    },
    "user_id": {
      "type": "string",
      "description": "Reference to User entity"
    },
    "email_verified": {
      "type": "boolean",
      "default": false,
      "description": "Email verification status"
    },
    "verification_token": {
      "type": "string",
      "description": "Token for email verification"
    },
    "id_document_url": {
      "type": "string",
      "description": "URL of uploaded ID document"
    }
  },
  "required": [
    "first_name",
    "last_name",
    "company",
    "email"
  ]
}
